<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio4.MainPage">

    <StackLayout Padding="20">
        <Label Text="Ingrese un número entero positivo:" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="Num" Placeholder="Número" Keyboard="Numeric" />

        <Button Text="Calcular Cuadrado y Cubo" Clicked="Button_Clicked" BackgroundColor="DarkGoldenrod" />

        <Label x:Name="Cuadrado" FontSize="20" HorizontalOptions="Center" />
        <Label x:Name="Cubo" FontSize="20" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
